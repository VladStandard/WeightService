@using Ws.DeviceControl.Models.Features.References1C.Plus
@using Ws.DeviceControl.Models.Features.References1C.Plus.Queries
@implements IDialogContentComponent<PluDto>

<SectionDialog>
  <Tab Id="@typeof(PlusUpdateForm).ToString()" Title="@Localizer["SectionPLU"]">
    <PlusUpdateForm Model="Content" FormModel="@PluMapper.DtoToUpdateDto(Content)" />
  </Tab>
  <Tab Id="@typeof(PluCharacteristsDataGrid).ToString()" Title="@Localizer["SectionPluCharacteristics"]">
    <PluCharacteristsDataGrid Plu="Content" />
  </Tab>
</SectionDialog>

@code {
  [Inject] private IStringLocalizer<ApplicationResources> Localizer { get; set; } = default!;

  [Parameter] public PluDto Content { get; set; } = default!;
}
